<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_form_view_inherit" model="ir.ui.view">
            <field name="name">res.config.settings.form.view.inherit.mrp.overtime.duration</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="security_lead_time" position="after">
                    <div class="col-12 col-lg-6 o_setting_box" id="overtime_limit_plan_workorder">
                        <div class="o_setting_right_pane">
                            <label for="limit_overtime_to_plan_workorder"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company"/>
                            <div class="text-muted">
                                Overtime needed to add extra plan time on work order
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <span><field name="limit_overtime_to_plan_workorder" class="oe_inline" widget="float_time"/> mm:ss</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </field>
        </record>
    
    </data>
</odoo>
